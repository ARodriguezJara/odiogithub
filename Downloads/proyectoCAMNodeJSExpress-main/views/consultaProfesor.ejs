   <% if (nombre_profesor) { %>

    <div class="container mt-4">
        <div class="card border-secondary">
            <center><H2><div class="card-header">Consulta Particular de Profesores:</div></H2></center>
            <div class="card-body">
                <form action="/consultaProfesor" method="POST">
                    <input id="clave_profesor" name="clave_profesor" value="<%= nombre_profesor.clave_profesor %>" hidden>
                    <div class="mb-3">
                        <label for="profesor" class="form-label">Nombre: </label>
                        <input type="text" class="form-control" id="nombre_profesor" readonly name="nombre_profesor" value="<%= nombre_profesor.nombre_profesor %>" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="profesor" class="form-label">Apellido Paterno: </label>
                        <input type="text" class="form-control" id="apellido_paterno" readonly name="apellido_paterno" value="<%= apellido_paterno.apellido_paterno %>" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="profesor" class="form-label">Apellido Materno: </label>
                        <input type="text" class="form-control" id="apellido_materno" readonly name="apellido_materno" value="<%= apellido_materno.apellido_materno %>" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="profesor" class="form-label">Correo Electrónico: </label>
                        <input type="text" class="form-control" id="correo_electronico" readonly name="correo_electronico" value="<%= correo_electronico.correo_electronico %>" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="profesor" class="form-label">No. Teléfono: </label>
                        <input type="text" class="form-control" id="telefono" readonly name="telefono" value="<%= nombre_profesor.telefono %>" tabindex="1">
                    </div>
                    
                    <center><H3><div class="card-header">Asignación de Cursos:</div></H3></center>
                    <div class="mb-3">
                      <label for="profesor" class="form-label">Cursos:</label>
                      <input id="cursos"  readonly name="cursos" class="form-control" value="<%= nombre_profesor.cursos %>" tabindex="1">
                  </div>

                    <center><a href="/profesores" class="btn btn-secondary">Regresar</a></center>
                </form>
            </div>
        </div>
    </div>

    <% } %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>