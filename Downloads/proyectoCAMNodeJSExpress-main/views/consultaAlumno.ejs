   <% if (nombre_alumno) { %>

    <div class="container mt-4">
        <div class="card border-secondary">
            <center><H2><div class="card-header">Consulta Particular de Alumnos:</div></H2></center>
            <div class="card-body">
                <form action="/consultaAlumno" method="POST">
                    <input id="matricula_alumno" name="matricula_alumno" value="<%= nombre_alumno.matricula_alumno %>" hidden>
                    <center><H3><div class="card-header">Datos Personales:</div></H3></center>
                    <div class="mb-3">
                        <label for="alumno" class="form-label">Nombre: </label>
                        <input type="text" class="form-control" id="nombre_alumno" readonly name="nombre_alumno" value="<%= nombre_alumno.nombre_alumno %>" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="alumno" class="form-label">Apellido Paterno: </label>
                        <input type="text" class="form-control" id="apellido_paterno" readonly name="apellido_paterno" value="<%= apellido_paterno.apellido_paterno %>" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="alumno" class="form-label">Apellido Materno: </label>
                        <input type="text" class="form-control" id="apellido_materno" readonly name="apellido_materno" value="<%= apellido_materno.apellido_materno %>" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="alumno" class="form-label">Fecha de Nacimiento: </label>
                        <input type="text" class="form-control" id="fecha_nacimiento" readonly name="fecha_nacimiento" value="<%= fecha_nacimiento.fecha_nacimiento %>" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="alumno" class="form-label">Edad Cumplida: </label>
                        <input type="text" class="form-control" id="edad_cumplida" readonly name="edad_cumplida" value="<%= edad_cumplida.edad_cumplida %>" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="alumno" class="form-label">No. Teléfono: (Opcional) </label>
                        <input type="text" class="form-control" id="telefono" readonly name="telefono" value="<%= telefono.telefono %>" tabindex="1">
                    </div>
                    <center><H3><div class="card-header">Dirección:</div></H3></center>
                    <div class="mb-3">
                        <label for="alumno" class="form-label">Calle: </label>
                        <input type="text" class="form-control" id="calle" readonly name="calle" value="<%= calle.calle %>" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="alumno" class="form-label">No. Exterior: </label>
                        <input type="text" class="form-control" id="num_exterior" readonly name="num_exterior" value="<%= num_exterior.num_exterior %>" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="alumno" class="form-label">Colonia: </label>
                        <input type="text" class="form-control" id="colonia" readonly name="colonia" value="<%= colonia.colonia %>" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="alumno" class="form-label">Código Postal: </label>
                        <input type="text" class="form-control" id="codigo_postal" readonly name="codigo_postal" value="<%= codigo_postal.codigo_postal %>" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="alumno" class="form-label">Ciudad: </label>
                        <input type="text" class="form-control" id="ciudad" readonly name="ciudad" value="<%= ciudad.ciudad %>" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="alumno" class="form-label">Estado: </label>
                        <input type="text" class="form-control" id="estado" readonly name="estado" value="<%= estado.estado %>" tabindex="1">
                    </div>
                    <center><H3><div class="card-header">Estado de Salud:</div></H3></center>
                    <div class="mb-3">
                        <label for="alumno" class="form-label">Discapacidad: (Opcional)</label>
                        <input type="text" class="form-control" id="discapacidad" readonly name="discapacidad" value="<%= discapacidad.discapacidad %>" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="alumno" class="form-label">Enfermedades: (Opcional)</label>
                        <input type="text" class="form-control" id="enfermedades" readonly name="enfermedades" value="<%= enfermedades.enfermedades %>" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="alumno" class="form-label">Alergias: (Opcional)</label>
                        <input type="text" class="form-control" id="alergias" readonly name="alergias" value="<%= alergias.alergias %>" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="alumno" class="form-label">Servicio Médico: (Opcional)</label>
                        <input type="text" class="form-control" id="servicio_medico" readonly name="servicio_medico" value="<%= servicio_medico.servicio_medico %>" tabindex="1">
                    </div>
                    <center><H3><div class="card-header">Documentación:</div></H3></center>
                    <div class="mb-3">
                        <label for="alumno" class="form-label">Acta de Nacimiento: (Opcional)</label>
                        <select readonly id="acta_nacimiento" name="acta_nacimiento" class="form-select" tabindex="3">
                            <option <%= nombre_alumno.acta_nacimiento=='' ? "selected" : '' %> value=""></option>
                            <option <%= nombre_alumno.acta_nacimiento=='Si' ? "selected" : '' %> value="Si">Si</option>
                            <option <%= nombre_alumno.acta_nacimiento=='No' ? "selected" : '' %> value="No">No</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="alumno" class="form-label">Fotografía: (Opcional)</label>
                        <select id="fotografia" name="fotografia" class="form-select" tabindex="3">
                            <option <%= nombre_alumno.fotografia=='' ? "selected" : '' %> value=""></option>
                            <option <%= nombre_alumno.fotografia=='Si' ? "selected" : '' %> value="Si">Si</option>
                            <option <%= nombre_alumno.fotografia=='No' ? "selected" : '' %> value="No">No</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="alumno" class="form-label">I.N.E.: (Opcional)</label>
                        <select id="ine" name="ine" class="form-select" tabindex="3">
                            <option <%= nombre_alumno.ine=='' ? "selected" : '' %> value=""></option>
                            <option <%= nombre_alumno.ine=='Si' ? "selected" : '' %> value="Si">Si</option>
                            <option <%= nombre_alumno.ine=='No' ? "selected" : '' %> value="No">No</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="alumno" class="form-label">Comprobante de Domicilio: (Opcional)</label>
                        <select id="comprobante_domicilio" name="comprobante_domicilio" class="form-select" tabindex="3">
                            <option <%= nombre_alumno.comprobante_domicilio=='' ? "selected" : '' %> value=""></option>
                            <option <%= nombre_alumno.comprobante_domicilio=='Si' ? "selected" : '' %> value="Si">Si</option>
                            <option <%= nombre_alumno.comprobante_domicilio=='No' ? "selected" : '' %> value="No">No</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="alumno" class="form-label">C.U.R.P.: (Opcional)</label>
                        <input type="text" readonly id="cursos" name="cursos" class="form-control" value="<%= nombre_alumno.curp %>" tabindex="1">
                       
                    </div>
                    
                    <center><H3><div class="card-header">Cursos Asignados:</div></H3></center>
                    <div class="mb-3">
                        <label for="alumno" class="form-label">Cursos:</label>
                        <input type="text" readonly id="cursos" name="cursos" class="form-control" value="<%= nombre_alumno.cursos %>" tabindex="1">
                    </div>
                    
                    <center><a href="/alumnos" class="btn btn-secondary">Regresar</a></center>
                </form>
            </div>
        </div>
    </div>
    <br>

    <% } %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>