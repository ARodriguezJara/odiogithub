   <% if (nombre_curso) { %>

    <div class="container mt-4">
        <div class="card border-secondary">
          <center><H2><div class="card-header">Modificación de Datos de Cursos</div></H2></center>
            <div class="card-body">
                <form action="/update" method="POST">
                    <input id="clave_curso" name="clave_curso" value="<%= nombre_curso.clave_curso %>" hidden>
                    <div class="mb-3">
                        <label for="curso" class="form-label">Nombre Curso: </label>
                        <input type="text" class="form-control" id="nombre_curso" name="nombre_curso" placeholder="Ej: Cocina" required value="<%= nombre_curso.nombre_curso %>" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="curso" class="form-label">Capacidad: </label>
                        <input type="number" class="form-control" id="capacidad" name="capacidad" placeholder="Ej: 7" required value="<%= capacidad.capacidad %>" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="curso" class="form-label">Días: </label>
                        <input type="text" class="form-control" id="dias_curso" name="dias_curso" placeholder="Ej: Lunes, Martes" required value="<%= dias_curso.dias_curso %>" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="curso" class="form-label">Hora de Entrada: </label>
                        <input type="time" class="form-control" id="horario_entrada" name="horario_entrada" placeholder="Ej: 11:00" required value="<%= horario_entrada.horario_entrada %>" tabindex="1">
                    </div>
                    <div class="mb-3">
                      <label for="curso" class="form-label">Horario de Salida: </label>
                      <input type="time" class="form-control" id="horario_salida" name="horario_salida" placeholder="Ej: 13:00" required value="<%= horario_salida.horario_salida %>" tabindex="1">
                  </div>
                    <center><button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                    <a href="/cursos" class="btn btn-secondary">Cancelar</a></center>
                </form>
            </div>
        </div>
    </div>

    <% } %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>