   <% if (nombre_profesor) { %>

    <div class="container mt-4">
        <div class="card border-secondary">
          <center><H2><div class="card-header">Modificación de Datos de Profesores</div></H2></center>
            <div class="card-body">
                <form action="/updateProfesor" method="POST">
                    <input id="clave_profesor" name="clave_profesor" value="<%= nombre_profesor.clave_profesor %>" hidden>
                    <div class="mb-3">
                        <label for="profesor" class="form-label">Nombre: </label>
                        <input type="text" class="form-control" id="nombre_profesor" name="nombre_profesor" placeholder="Ej: Jose Jesus" required value="<%= nombre_profesor.nombre_profesor %>" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="profesor" class="form-label">Apellido Paterno: </label>
                        <input type="text" class="form-control" id="apellido_paterno" name="apellido_paterno" placeholder="Ej: Dominguez" required value="<%= apellido_paterno.apellido_paterno %>" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="profesor" class="form-label">Apellido Materno: </label>
                        <input type="text" class="form-control" id="apellido_materno" name="apellido_materno" placeholder="Ej: Araiza" required value="<%= apellido_materno.apellido_materno %>" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="profesor" class="form-label">Correo Electrónico: </label>
                        <input type="email" class="form-control" id="correo_electronico" name="correo_electronico" name="correo_electronico" placeholder="Ej: jose.jesus12@gmail.com" required value="<%= correo_electronico.correo_electronico %>" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="profesor" class="form-label">No. Teléfono: </label>
                        <input type="text" class="form-control" id="telefono" name="telefono" placeholder="Ej: 6862441155" required value="<%= telefono.telefono %>" tabindex="1">
                    </div>

                    <center><H3><div class="card-header">Asignación de Cursos:</div></H3></center>
                    <div class="mb-3">
                        <label for="alumno" class="form-label">Cursos:</label>
                              <select id="cursos" name="cursos" class="form-select">
                                <option value="<%= cursos.cursos %>" selected><%= cursos.cursos %></option>
                                    <% for(var i=0; i < curso.length; i++){ %>
                                        <option value="<%= curso[i].clave_curso %> - <%= curso[i].nombre_curso %>"><%= curso[i].clave_curso %> - <%= curso[i].nombre_curso %></option>  
                                    <%  } %>
                              </select>
                    </div>

                    <center><button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                    <a href="/profesores" class="btn btn-secondary">Cancelar</a></center>
                </form>
            </div>
        </div>
    </div>

    <% } %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
